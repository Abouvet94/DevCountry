<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        {# <meta http-equiv="refresh" content="15" > #}
        <title>{% block title %}DevCountry{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('framework/css/style.css') }}" type="text/css" media="all">
            <link rel="stylesheet" href="{{ asset('framework/css/hamburgers.css') }}" type="text/css" media="all">
            <script src="{{ asset('framework/js/jquery-3.3.1.min.js') }}"></script>
        {% endblock %}
    </head>
    <body>
        {% block body %}
            {# Menu #}
            <nav id="menu" class="menu">

                <section class="menu-section">
                    <ul class="menu-section-list">
                    <li id="home"><a>Home</a></li>
                    </ul>
                </section>

                <section class="menu-section">
                    <h3 class="menu-section-title">Services :</h3>
                    <ul class="menu-section-list">
                    <li id="serv_siteweb"><a>Site Internet</a></li>
                    <li id="serv_appwab"><a>Applications Web</a></li>
                    <li id="serv_robo"><a>Robotique</a></li>
                    </ul>
                </section>

                <section class="menu-section">
                    <h3 class="menu-section-title">Tuto :</h3>
                    <ul class="menu-section-list">
                    <li id="cours"><a>Cours (semi-free)</a></li>
                    <li id="cours_admin"><a>Admin. Système & Réseaux</a></li>
                    <li id="cours_dev"><a>Dev. Logiciel, Mobile et Web</a></li>
                    </ul>
                </section>

                <section class="menu-section">
                    <h3 class="menu-section-title">Robotique :</h3>
                    <ul class="menu-section-list">
                    <li id="robo_fan"><a>Fan Club</a></li>
                    <li id="robo_arch"><a>Archive</a></li>
                    </ul>
                </section>
            </nav>

            {# Header All Pages #}
            <header class="fixed-header">
                <button class="hamburger js-slideout-toggle hamburger--arrow" type="button">
                    <span class="hamburger-box">
                        <span class="hamburger-inner"></span>
                    </span>
                </button>
            </header>
        {% endblock %}
        {% block javascripts %}
            <script src="{{ asset('framework/js/slideout.min.js') }}"></script>
            <script src="{{ asset('framework/js/function.js') }}"></script>
        {% endblock %}
    </body>
</html>
